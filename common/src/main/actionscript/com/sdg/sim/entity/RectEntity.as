package com.sdg.sim.entity{	import com.sdg.geom.VertexUtil;		public class RectEntity extends PolyEntity	{		protected var _extents:Array;				public function get width():Number		{			return _extents[0] * 2;		}				public function set width(value:Number):void		{			_extents[0] = value * .5;			_vertices[0].x = _vertices[3].x = -_extents[0];			_vertices[1].x = _vertices[2].x = _extents[0];						invalidate(RESIZED_FLAG);		}				public function get height():Number		{			return _extents[1] * 2;		}				public function set height(value:Number):void		{			_extents[1] = value * .5;			_vertices[0].y = _vertices[1].y = -_extents[0];			_vertices[2].y = _vertices[3].y = _extents[0];						invalidate(RESIZED_FLAG);		}				public function RectEntity(width:Number = 1, height:Number = 1)		{			_extents = [width * .5, height * .5];			super(VertexUtil.createBox(_extents[0], _extents[1]));		}	}}