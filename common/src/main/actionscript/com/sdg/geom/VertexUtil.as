package com.sdg.geom{	public class VertexUtil	{		public static function createVertices(...params:Array):Array		{			var vertices:Array = [];			var i:int;						// Create from list of alternating x and y coordinates.			if (params[0] is Number)			{				i = -1;				var l:int = params.length;								while (++i < l)					vertices[i] = new V2(params[i], params[++i]);			}			// Create from separate lists of x and y coordinates.			else if (params[0] is Array && params[1] is Array)			{				var xList:Array = params[0];				var yList:Array = params[1];				i = xList.length;								while (--i > -1)					vertices[i] = new V2(xList[i], yList[i]);			}			// Create from list of objects with x and y properties.			else if (params[0].hasOwnProperty('x') && params[0].hasOwnProperty('y'))			{				i = params.length;								while (--i > -1)					vertices[i] = new V2(params[i].x, params[i].y);			}						return vertices;		}				public static function createBox(ex:Number, ey:Number):Array		{			return [ new V2(-ex, -ey), new V2(ex, -ey), new V2(ex, ey), new V2(-ex, ey) ];		}	}}