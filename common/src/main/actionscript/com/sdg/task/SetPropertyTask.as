package com.sdg.task{	import com.sdg.events.TaskEvent;	import com.sdg.task.ITask;	import com.sdg.utils.Property;	import flash.events.EventDispatcher;		public class SetPropertyTask extends EventDispatcher implements ITask	{		private var _host:Object;		private var _chain:Object;		private var _value:Object;		private var _isRunning:Boolean = false;				public function get host():Object		{			return _host;		}				public function get isRunning():Boolean		{			return _isRunning;		}				public function SetPropertyTask(host:Object, chain:Object, value:Object)		{			_host = host;			_chain = chain;			_value = value;		}				public function start():void		{			_isRunning = true;			dispatchEvent(new TaskEvent(TaskEvent.START));						new Property(_host, _chain).setValue(_value.valueOf());						_isRunning = false;			dispatchEvent(new TaskEvent(TaskEvent.COMPLETE));		}				public function interrupt():void		{			_isRunning = false;			dispatchEvent(new TaskEvent(TaskEvent.INTERRUPT));		}	}}