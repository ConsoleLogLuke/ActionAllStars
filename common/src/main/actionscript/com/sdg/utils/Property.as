package com.sdg.utils{	public class Property	{		public var host:Object;		public var chain:Object;				/**		 * Constructor.		 */		public function Property(host:Object, chain:Object)		{			this.host = host;						if (chain is Array)				this.chain = chain.slice();			else if (chain is String && chain.indexOf('.') > -1)				this.chain = chain.split('.');			else 				this.chain = chain;		}				/**		 * Traverses to the end of the property chain and returns the current value.		 */		public function getValue():*		{			return valueOf();		}				/**		 * Attempts to set the value of the last item in the property chain.		 */		public function setValue(value:*):void		{			var host:Object = this.host, access:Object = chain;						if (chain is Array)			{				host = getChainValue(chain.length - 1);				access = chain[chain.length - 1];			}						if (host != null && access != null) host[access] = value;		}				/**		 * Traverses to the end of the property chain and returns the current value.		 */		public function valueOf():Object		{			return chain is Array ? getChainValue(chain.length) : getHostValue(host, chain);		}				private function getChainValue(length:int):Object		{			var host:Object = this.host;						for (var i:int = 0; i < length; i++)				host = getHostValue(host, chain[i]);						return host;		}				private function getHostValue(host:Object, access:Object):*		{			return host == null || access == null ? null : host[access];		}	}}