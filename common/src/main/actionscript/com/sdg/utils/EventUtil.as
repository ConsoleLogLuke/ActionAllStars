package com.sdg.utils {	import flash.events.Event;		public class EventUtil	{		public static function createEventInvoker(listener:Function, ...args:Array):Function		{			return function(event:Event):void			{				listener.apply(null, args);			}		}				public static function createOneTimeEventInvoker(listener:Function, ...args:Array):Function		{			return function(event:Event):void			{				event.currentTarget.removeEventListener(event.type, arguments.callee);				listener.apply(null, args);			}		}				public static function createOneTimeEventListener(listener:Function):Function		{			var applyArgs:Boolean = arguments.length > 1;						return function(event:Event):void			{				event.currentTarget.removeEventListener(event.type, arguments.callee);				listener.(event);			}		}				public static function createRedispatcher(target:Object):Function		{			return function(event:Event):void			{				target.dispatchEvent(event);			}		}	}}