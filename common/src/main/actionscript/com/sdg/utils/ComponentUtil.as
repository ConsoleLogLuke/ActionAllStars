package com.sdg.utils{		import mx.core.IFlexDisplayObject;	import mx.core.UIComponent;	import mx.styles.ISimpleStyleClient;	import mx.styles.StyleManager;	import mx.utils.ArrayUtil;	import flash.display.Graphics;	    public class ComponentUtil	{		public static function createSkin(component:UIComponent, styleName:String, defaultClassOrInstance:Object = null):IFlexDisplayObject		{			var skin:IFlexDisplayObject;			var skinClass:Class;							if (styleName) skinClass = component.getStyle(styleName);							if (skinClass == null && defaultClassOrInstance is Class)				skinClass = defaultClassOrInstance as Class;								if (skinClass)				skin = new skinClass() as IFlexDisplayObject;			else if (defaultClassOrInstance is IFlexDisplayObject)				skin = IFlexDisplayObject(defaultClassOrInstance);							if (skin is ISimpleStyleClient)				ISimpleStyleClient(skin).styleName = component;								return skin;		}    }}